<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp">

    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey">

            <TextView
                android:id="@+id/recycler_view_row_id_text"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="ID"/>

            <TextView
                android:id="@+id/recycler_view_row_id_title"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_row_id_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE"/>

            <TextView
                android:id="@+id/recycler_view_row_id_3"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_row_id_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Some text 3"/>

            <TextView
                android:id="@+id/recycler_view_row_id_4"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_row_id_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some text 4"/>

        </android.support.constraint.ConstraintLayout>




    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>