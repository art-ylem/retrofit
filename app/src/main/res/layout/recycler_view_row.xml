<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
<android.support.v7.widget.CardView
    android:id="@+id/recyclerCardView"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recycler_view_row_id_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="ID"/>

        <TextView
            android:id="@+id/recycler_view_row_id_title"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_row_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE"/>

    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/information_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    </FrameLayout>

</android.support.constraint.ConstraintLayout>

